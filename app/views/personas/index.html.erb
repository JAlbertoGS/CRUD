<h1>Tabla de citas</h1>
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">E-mail</th>
      <th scope="col">Handle</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @personas.each do |per| %>
        <tr>
            <th scope="row"><%= per.id %></th>
            <td><%=per.name + ' '+ per.last_name%></td>
            <td><%= per.email %></td>
            <td>@mdo</td>
            <td>
            <div class="btn btn-outline-danger">
              <%= link_to "<i class='bi bi-trash-fill'></i>".html_safe, per, :method => :delete, data: {confirm:"Â¿Seguro que quieres eliminar el articulo?"} %>
            </div> 
            <div class="btn btn-outline-warning">
              <%= link_to "<i class='bi bi-pencil-square'></i>".html_safe, edit_persona_path(per) %>
            </div></td>
        </tr>
    <% end %>
  </tbody>
</table>    

