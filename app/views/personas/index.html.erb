<h1>Tabla de citas</h1>
<div class="container">
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">E-mail</th>
        <th scope="col">Fecha de creación</th>
        <th scope="col">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @personas.each do |per| %>
          <tr>
              <th scope="row"><%= per.id %></th>
              <td><%=per.name + ' '+ per.last_name%></td>
              <td><%= per.email %></td>
              <td><%= per.created_at.strftime("%d-%m-%Y") %></td>
              <td>
                <%= link_to "<i class='bi bi-trash-fill btn btn-outline-danger'></i>".html_safe, per, :method => :delete, data: {confirm:"¿Seguro que quieres eliminar la cita?"} %>

                <%= link_to "<i class='bi bi-pencil-square btn btn-outline-warning'></i>".html_safe, edit_persona_path(per) %>
          </tr>
      <% end %>
      
    </tbody>
  </table>
</div>
<div class= "container">
  
  <%= link_to "<i class='bi bi-file-earmark-plus-fill btn btn-outline-success'></i>".html_safe, new_persona_path %>
  
</div>    

